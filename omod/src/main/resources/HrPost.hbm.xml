<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.openmrs.module.hr.HrPost" table="hr_post" catalog="openmrs">
        <id name="postId" type="int">
            <column name="post_id" />
            <generator class="assigned" />
        </id>
        <many-to-one name="hrJobTitle" class="org.openmrs.module.hr.HrJobTitle" fetch="select">
            <column name="job_id" not-null="true" />
        </many-to-one>
        <property name="nationalId" type="java.lang.Integer">
            <column name="national_id" unique="true" />
        </property>
        <property name="locationId" type="int">
            <column name="location_id" not-null="true" />
        </property>
        <property name="timeBasis" type="string">
            <column name="time_basis" length="50" />
        </property>
        <property name="status" type="java.lang.Integer">
            <column name="status" />
        </property>
        <property name="fundingSource" type="string">
            <column name="funding_source" length="50" />
        </property>
        <property name="creator" type="int">
            <column name="creator" not-null="true" />
        </property>
        <property name="dateCreated" type="timestamp">
            <column name="date_created" length="19" not-null="true" />
        </property>
        <property name="changedBy" type="java.lang.Integer">
            <column name="changed_by" />
        </property>
        <property name="dateChanged" type="timestamp">
            <column name="date_changed" length="19" />
        </property>
        <property name="retired" type="short">
            <column name="retired" not-null="true" />
        </property>
        <property name="retiredBy" type="java.lang.Integer">
            <column name="retired_by" />
        </property>
        <property name="dateRetired" type="timestamp">
            <column name="date_retired" length="19" />
        </property>
        <property name="retireReason" type="string">
            <column name="retire_reason" />
        </property>
        <property name="uuid" type="string">
            <column name="uuid" length="38" not-null="true" />
        </property>
        <set name="hrPostHistories" inverse="true">
            <key>
                <column name="post_id" not-null="true" />
            </key>
            <one-to-many class="org.openmrs.module.hr.HrPostHistory" />
        </set>
    </class>
</hibernate-mapping>
