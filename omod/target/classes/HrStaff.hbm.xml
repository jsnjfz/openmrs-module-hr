<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.openmrs.module.hr.HrStaff" table="hr_staff" catalog="openmrs">
        <id name="staffId" type="int">
            <column name="staff_id" />
            <generator class="assigned" />
        </id>
        <many-to-one name="hrProvider" class="org.openmrs.module.hr.HrProvider" fetch="select">
            <column name="provider_id" unique="true" />
        </many-to-one>
        <property name="staffStatus" type="string">
            <column name="staff_status" length="20" />
        </property>
        <property name="initialHireDate" type="timestamp">
            <column name="initial_hire_date" length="19" />
        </property>
        <property name="creator" type="int">
            <column name="creator" not-null="true" />
        </property>
        <property name="dateCreated" type="timestamp">
            <column name="date_created" length="19" />
        </property>
        <property name="changedBy" type="java.lang.Integer">
            <column name="changed_by" />
        </property>
        <property name="dateChanged" type="timestamp">
            <column name="date_changed" length="19" />
        </property>
        <property name="voided" type="short">
            <column name="voided" not-null="true" />
        </property>
        <property name="voidedBy" type="java.lang.Integer">
            <column name="voided_by" />
        </property>
        <property name="dateVoided" type="timestamp">
            <column name="date_voided" length="19" />
        </property>
        <property name="voidReason" type="string">
            <column name="void_reason" />
        </property>
        <set name="hrAssignments" inverse="true">
            <key>
                <column name="supervisor_id" />
            </key>
            <one-to-many class="org.openmrs.module.hr.HrAssignment" />
        </set>
        <set name="hrStaffs" inverse="true">
            <key>
                <column name="staff_id" not-null="true" unique="true" />
            </key>
            <one-to-many class="org.openmrs.module.hr.HrStaff" />
        </set>
        <set name="hrStaffAttributes" inverse="true">
            <key>
                <column name="staff_id" />
            </key>
            <one-to-many class="org.openmrs.module.hr.HrStaffAttribute" />
        </set>
        <set name="hrEducations" inverse="true">
            <key>
                <column name="staff_id" not-null="true" />
            </key>
            <one-to-many class="org.openmrs.module.hr.HrEducation" />
        </set>
        <set name="hrEvaluations" inverse="true">
            <key>
                <column name="staff_id" not-null="true" />
            </key>
            <one-to-many class="org.openmrs.module.hr.HrEvaluation" />
        </set>
        <set name="hrStaffCerts" inverse="true">
            <key>
                <column name="staff_id" not-null="true" />
            </key>
            <one-to-many class="org.openmrs.module.hr.HrStaffCert" />
        </set>
        <set name="hrPostHistories" inverse="true">
            <key>
                <column name="post_history_ID" not-null="true" unique="true" />
            </key>
            <one-to-many class="org.openmrs.module.hr.HrPostHistory" />
        </set>
    </class>
</hibernate-mapping>
