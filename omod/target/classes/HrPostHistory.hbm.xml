<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.openmrs.module.hr.HrPostHistory" table="hr_post_history" catalog="openmrs">
        <id name="postHistoryId" type="int">
            <column name="post_history_ID" />
            <generator class="assigned" />
        </id>
        <many-to-one name="hrPost" class="org.openmrs.module.hr.HrPost" fetch="select">
            <column name="post_id" not-null="true" />
        </many-to-one>
        <property name="staffId" type="int">
            <column name="staff_id" not-null="true" />
        </property>
        <property name="startDate" type="timestamp">
            <column name="start_date" length="19" not-null="true" />
        </property>
        <property name="endDate" type="timestamp">
            <column name="end_date" length="19" />
        </property>
        <property name="endReason" type="string">
            <column name="end_reason" length="10" />
        </property>
        <property name="endReasonOther" type="string">
            <column name="end_reason_other" length="252" />
        </property>
        <property name="creator" type="int">
            <column name="creator" not-null="true" />
        </property>
        <property name="dateCreated" type="timestamp">
            <column name="date_created" length="19" not-null="true" />
        </property>
        <property name="changedBy" type="java.lang.Integer">
            <column name="changed_by" />
        </property>
        <property name="dateChanged" type="timestamp">
            <column name="date_changed" length="19" />
        </property>
        <property name="voided" type="short">
            <column name="voided" not-null="true" />
        </property>
        <property name="voidedBy" type="java.lang.Integer">
            <column name="voided_by" />
        </property>
        <property name="dateVoided" type="timestamp">
            <column name="date_voided" length="19" />
        </property>
        <property name="voidReason" type="string">
            <column name="void_reason" />
        </property>
        <property name="uuid" type="string">
            <column name="uuid" length="38" not-null="true" />
        </property>
        <set name="hrAssignments" inverse="true">
            <key>
                <column name="post_history_id" not-null="true" />
            </key>
            <one-to-many class="org.openmrs.module.hr.HrAssignment" />
        </set>
        <set name="hrLeaves" inverse="true">
            <key>
                <column name="post_history_id" not-null="true" />
            </key>
            <one-to-many class="org.openmrs.module.hr.HrLeave" />
        </set>
    </class>
</hibernate-mapping>
