<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.openmrs.module.hr.HrStaffAttributeType" table="hr_staff_attribute_type" catalog="openmrs">
        <id name="staffAttributeTypeId" type="int">
            <column name="staff_attribute_type_id" />
            <generator class="assigned" />
        </id>
        <property name="name" type="string">
            <column name="name" length="50" not-null="true" />
        </property>
        <property name="description" type="string">
            <column name="description" length="65535" not-null="true" />
        </property>
        <property name="handlerType" type="string">
            <column name="handler_type" length="50" not-null="true" />
        </property>
        <property name="handlerConfiguration" type="string">
            <column name="handler_configuration" length="50" />
        </property>
        <property name="minOccurs" type="int">
            <column name="min_occurs" not-null="true" />
        </property>
        <property name="maxOccurs" type="java.lang.Integer">
            <column name="max_occurs" />
        </property>
       <many-to-one name="creator" class="org.openmrs.User" not-null="true" column="creator"/>
		<property name="dateCreated" type="java.util.Date" column="date_created" not-null="true" />
		<many-to-one name="changedBy" class="org.openmrs.User" column="changed_by" />
		<property name="dateChanged" type="java.util.Date" column="date_changed" />		
		<property name="retired" type="java.lang.Boolean" length="1" not-null="true" column="retired"/>
		<many-to-one name="retiredBy" class="org.openmrs.User" column="retired_by" />
		<property name="dateRetired" type="java.util.Date" column="date_retired" />	
		<property name="retireReason" type="string" column="retire_reason" />
        <property name="editPrivilege" type="string">
            <column name="edit_privilege" />
        </property>
        <property name="uuid" type="string">
            <column name="uuid" length="38" not-null="true" unique="true" />
        </property>
        <property name="sortWeight" type="java.lang.Double">
            <column name="sort_weight" precision="22" scale="0" />
        </property>
        <set name="hrStaffAttributes" inverse="true">
            <key>
                <column name="staff_attribute_type_id" />
            </key>
            <one-to-many class="org.openmrs.module.hr.HrStaffAttribute" />
        </set>
    </class>
</hibernate-mapping>
