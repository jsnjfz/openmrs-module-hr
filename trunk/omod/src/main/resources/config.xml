<?xml version="1.0" encoding="UTF-8"?>

<module configVersion="1.2">
	
	<!-- Base Module Properties -->
	<id>hr</id>
	<name>Human Resource Module</name>
	<version>0.1</version>
	<package>org.openmrs.module.@MODULE_ID@</package>
	<author>Sai Manohar Nethi</author>
	<description>
			Human Resource Module for managing personnel information
	</description>

	<activator>@MODULE_PACKAGE@.HumanResourceModuleActivator</activator>
	
	<!-- <updateURL>https://dev.openmrs.org/modules/download/@MODULE_ID@/update.rdf</updateURL> -->
	<!-- /Base Module Properties -->
	
	<require_version>1.7.0</require_version>
	
	<!-- Extensions -->
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>@MODULE_PACKAGE@.extension.html.AdminList</class>
	</extension>
	<extension>
	<point>org.openmrs.gutter.tools</point>
	<class>@MODULE_PACKAGE@.extension.html.HumanResourcesGutterLinkExt
	</class>
	</extension>
	
	
	
	
	<!-- Internationalization -->
	<!-- All message codes should start with @MODULE_ID@.* -->
	<messages>
		<lang>en</lang>
		<file>messages.properties</file>
	</messages>
	<messages>
		<lang>fr</lang>
		<file>messages_fr.properties</file>
	</messages>
	<messages>
		<lang>es</lang>
		<file>messages_es.properties</file>
	</messages>
	<!-- /Internationalization -->
	<servlet>
		<servlet-name>AttributePopulator</servlet-name>
		<servlet-class>org.openmrs.module.hr.web.servlet.AttributePopulator</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AttributePopulator</servlet-name>
		<url-pattern>/AttributePopulator</url-pattern>
	</servlet-mapping>
	<!-- Required Privileges -->
	<privilege>
		<name>Manage Posts</name>
		<description>Able to Manage (Create/Edit) the Posts</description>
	</privilege>
	
	<privilege>
		<name>Manage Job Titles</name>
		<description>Able to Manage (Create/Edit) the Job Titles</description>
	</privilege>
	
	<privilege>
		<name>Manage Staff</name>
		<description>Able to Manage (Create/Edit) the Staff</description>
	</privilege>
	
	<privilege>
		<name>Manage Staff Attribute Types</name>
		<description>Able to Manage (Create/Edit/Delete) the Staff Attribute Types</description>
	</privilege>
	
	<privilege>
		<name>View Staff</name>
		<description>Able to View the Staff</description>
	</privilege>
	
	<privilege>
		<name>Add Post</name>
		<description>Able to Add (Create/Move) Posts</description>
	</privilege>
	
	<privilege>
		<name>View Posts</name>
		<description>Able to View Posts</description>
	</privilege>
	
	<privilege>
		<name>View Staff Demographics</name>
		<description>Able to View Staff Demographics</description>
	</privilege>
	
	<privilege>
		<name>Find Human Resources</name>
		<description>Able to Find Human Resources</description>
	</privilege>
	
	<privilege>
		<name>Add Assignments</name>
		<description>Able to Add Assignments</description>
	</privilege>
	
	<privilege>
		<name>View Reports</name>
		<description>Able to view reports</description>
	</privilege>

	<!-- /Required Privileges -->
	<!-- Global Properties -->
	<globalProperty>
		<property>@MODULE_ID@.Staff_Attribute_to_display</property>
		<defaultValue></defaultValue>
		<description>
			Name of Staff_Attribute to display in Staff header
		</description>
	</globalProperty>
		
	<globalProperty>
		<property>@MODULE_ID@.Centric</property>
		<defaultValue>post</defaultValue>
		<description>
			Value "person" for person-centric and "post" for post-centric.
		</description>
	</globalProperty>
	<!-- /Global Properties -->
	<!-- mappings -->
	<mappingFiles>
		HrAssignment.hbm.xml
		HrPostHistory.hbm.xml
		HrPost.hbm.xml
		HrLeave.hbm.xml
		HrIscoCodes.hbm.xml
		HrJobTitle.hbm.xml
		HrStaff.hbm.xml
		HrProvider.hbm.xml
		HrCertificate.hbm.xml
		HrCompetency.hbm.xml
		HrEducation.hbm.xml
		HrEvaluation.hbm.xml
		HrStaffAttribute.hbm.xml
		HrStaffAttributeType.hbm.xml
		HrStaffCert.hbm.xml
		HrStaffNote.hbm.xml 
		HrTraining.hbm.xml
		HrTrainingClass.hbm.xml
		HrTrainPerson.hbm.xml
		HrStaffTag.hbm.xml
		HrReport.hbm.xml
	</mappingFiles>
</module>

