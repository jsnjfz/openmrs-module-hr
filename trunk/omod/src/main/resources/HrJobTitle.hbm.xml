<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.openmrs.module.hr.HrJobTitle" table="hr_job_title" catalog="openmrs">
        <id name="jobId" type="int">
            <column name="job_id" />
            <generator class="assigned" />
        </id>
        <many-to-one name="hrIscoCodes" class="org.openmrs.module.hr.HrIscoCodes" fetch="select">
            <column name="codeISCO" length="4" />
        </many-to-one>
        <property name="nationalId" type="java.lang.Integer">
            <column name="national_id" />
        </property>
        <property name="title" type="string">
            <column name="title" not-null="true" />
        </property>
        <property name="cadre" type="int">
            <column name="cadre" not-null="true" />
        </property>
        <property name="grades" type="string">
            <column name="grades" not-null="true" />
        </property>
        <property name="description" type="string">
            <column name="description" length="65535" />
        </property>
        <property name="creator" type="int">
            <column name="creator" not-null="true" />
        </property>
        <property name="dateCreated" type="timestamp">
            <column name="date_created" length="19" not-null="true" />
        </property>
        <property name="changedBy" type="java.lang.Integer">
            <column name="changed_by" />
        </property>
        <property name="dateChanged" type="timestamp">
            <column name="date_changed" length="19" />
        </property>
        <property name="retired" type="short">
            <column name="retired" not-null="true" />
        </property>
        <property name="retiredBy" type="java.lang.Integer">
            <column name="retired_by" />
        </property>
        <property name="dateRetired" type="timestamp">
            <column name="date_retired" length="19" />
        </property>
        <property name="retireReason" type="string">
            <column name="retire_reason" />
        </property>
        <property name="uuid" type="string">
            <column name="uuid" length="38" not-null="true" unique="true" />
        </property>
        <set name="hrPosts" inverse="true">
            <key>
                <column name="job_id" not-null="true" />
            </key>
            <one-to-many class="org.openmrs.module.hr.HrPost" />
        </set>
    </class>
</hibernate-mapping>
