<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.openmrs.module.hr.HrStaffNote" table="hr_staff_note" catalog="openmrs">
        <id name="staffNoteId" type="int">
            <column name="staff_note_id" />
            <generator class="assigned" />
        </id>
        <many-to-one name="hrStaff" class="org.openmrs.module.hr.HrStaff" fetch="select">
            <column name="staff_id" />
        </many-to-one>
        <many-to-one name="hrStaffNote" class="org.openmrs.module.hr.HrStaffNote" fetch="select">
            <column name="parent" />
        </many-to-one>
        <property name="staffNoteType" type="string">
            <column name="staff_note_type" length="50" />
        </property>
        <property name="text" type="string">
            <column name="text" length="65535" not-null="true" />
        </property>
        <property name="priority" type="java.lang.Integer">
            <column name="priority" />
        </property>
        <property name="creator" type="int">
            <column name="creator" not-null="true" />
        </property>
        <property name="dateCreated" type="timestamp">
            <column name="date_created" length="19" not-null="true" />
        </property>
        <property name="changedBy" type="java.lang.Integer">
            <column name="changed_by" />
        </property>
        <property name="dateChanged" type="timestamp">
            <column name="date_changed" length="19" />
        </property>
        <property name="voided" type="short">
            <column name="voided" not-null="true" />
        </property>
        <property name="voidedBy" type="java.lang.Integer">
            <column name="voided_by" />
        </property>
        <property name="dateVoided" type="timestamp">
            <column name="date_voided" length="19" />
        </property>
        <property name="voidReason" type="string">
            <column name="void_reason" />
        </property>
        <property name="uuid" type="string">
            <column name="uuid" length="38" not-null="true" unique="true" />
        </property>
        <set name="hrStaffNotes" inverse="true">
            <key>
                <column name="parent" />
            </key>
            <one-to-many class="org.openmrs.module.hr.HrStaffNote" />
        </set>
    </class>
</hibernate-mapping>
